@model EventEase_Booking_System.ViewModels.BookingHistory

@{
    ViewData["Title"] = "Booking History";
}

<h1>Booking History</h1>

<!-- Filter Form -->
<form asp-action="BookingHistory" method="get" class="mb-4">
    <div class="row">
        <div class="col-md-12">

            <div class="form-group">
                <label asp-for="FilterEventName" class="control-label">Event Name</label>
                <input asp-for="FilterEventName" class="form-control" />
            </div>
            <br />
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="FilterVenueName" class="control-label">Venue Name</label>
                <input asp-for="FilterVenueName" class="form-control" />
            </div>
            <br />

        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="FilterBookingStartDate" class="control-label">Booking Start Date</label>
                <input asp-for="FilterBookingStartDate" type="date" class="form-control" />
            </div>

            <br />
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="FilterBookingEndDate" class="control-label">Booking End Date</label>
                <input asp-for="FilterBookingEndDate" type="date" class="form-control" />
            </div>
            <br />

        </div>
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="Filter" class="btn btn-primary" />
    </div>
</form>

<!-- Results Table -->

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Event</th>
                <th>Venue</th>
                <th>Start Date</th>
                <th>End Date</th>
            </tr>
        </thead>
        <tbody>

        @foreach (var booking in Model.Bookings)
        {
            <tr>
                <td>@booking.Event?.EventName</td>
                <td>@booking.Venue?.VenueName</td>
                <td>@booking.BookingStartDate</td>
                <td>@booking.BookingEndDate</td>
            </tr>
        }
        </tbody>
    </table>



<style>

