        background-image: url('https://img.freepik.com/free-vector/gradient-liquid-abstract-background_52683-60469.jpg?t=st=1743232859~exp=1743236459~hmac=8e5591274bca350d5752f596bab4e4d1ebfcff555a4956fc211d153849daad8e&w=1380');
