@model EventEase_Booking_System.Models.Venue

@{
    ViewData["Title"] = "Details";
}

<h1>VENUE DETAILS</h1>
 <hr />

<div>
   
    <dl class="row">
        <dt class = "col-sm-2">
            Venue Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueName)
        </dd>
        <dt class = "col-sm-2">
            Venue Location
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueLocation)
        </dd>
        <dt class = "col-sm-2">
            Venue Capacity
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueCapacity)
        </dd>
        <dt class = "col-sm-2">
            Venue URL
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueURL)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.VenueID" class="btn btn-primary">Edit</a>
</div>

<div>
    <a asp-action="Index"><b>Back To List</b></a>
</div>


